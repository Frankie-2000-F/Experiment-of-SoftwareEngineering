<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg1">

        <Button
            android:id="@+id/btn_return"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/transparent" />

        <Button
            android:id="@+id/btn_expend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57dp"
            android:background="@android:color/white"
            android:text="支出"
            android:textColor="@color/dark_blue"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收入"
            android:textSize="20sp"
            android:textColor="@color/gray"
            android:background="@drawable/btn1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white">

        <Spinner
            android:id="@+id/sp_source"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:entries="@array/ar_source"
            android:paddingHorizontal="32dp"
            android:textColor="@color/dark_blue"
            android:textSize="90sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:text="￥"
                android:paddingLeft="20dp"
                android:gravity="center"
                android:textColor="@color/purple"
                android:textSize="40dp"/>

            <EditText
                android:id="@+id/et_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:paddingLeft="30dp"
                android:gravity="center"
                android:textColor="@color/purple"
                android:textColorHint="@color/purple"
                android:textSize="40sp" />

        </LinearLayout>

    </LinearLayout>

    //选择消费类型
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@android:color/white">

        //第一排图标
        <LinearLayout
            android:paddingHorizontal="16dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">

                <Button
                    android:id="@+id/btn_ex1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"

                    android:layout_marginTop="10dp"
                    android:background="@drawable/expend1" />

                <TextView
                    android:id="@+id/tv_ex1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:text="餐饮"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_ex2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/expend2" />

                <TextView
                    android:id="@+id/tv_ex2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="购物"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_ex3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/expend3" />

                <TextView
                    android:id="@+id/tv_ex3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="交通"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_ex4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/expend4" />

                <TextView
                    android:id="@+id/tv_ex4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="日用"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_ex5"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/expend5" />

                <TextView
                    android:id="@+id/tv_ex5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="娱乐"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

        </LinearLayout>

        //第一排文字

        <LinearLayout
            android:paddingHorizontal="16dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_ex6"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/expend6" />

                <TextView
                    android:id="@+id/tv_ex6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="通讯"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_ex7"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/expend7" />

                <TextView
                    android:id="@+id/tv_ex7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="人情"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_ex8"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/expend8" />

                <TextView
                    android:id="@+id/tv_ex8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="旅行"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_ex9"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/expend9" />

                <TextView
                    android:id="@+id/tv_ex9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="医疗"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_ex10"
                    android:layout_width="45dp"
                    android:layout_height="45dp"

                    android:layout_marginTop="10dp"
                    android:background="@drawable/expend10" />

                <TextView
                    android:id="@+id/tv_ex10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="其它"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

        </LinearLayout>

        //第二排文字
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/white">

        <Button
            android:id="@+id/btn_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="@color/dark_blue"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:hint="请输入备注信息"
            android:paddingLeft="50dp"
            android:paddingRight="40dp"
            android:gravity="center"
            android:textColor="@color/dark_blue"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="@android:color/white">

        <Button
            android:id="@+id/btn_again"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="@android:color/white"
            android:text="再记一笔"
            android:textColor="@color/purple"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="@color/purple"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
