<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg1">

        <Button
            android:id="@+id/btn_return"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:text="X"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/transparent" />

        <Button
            android:id="@+id/btn_expend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57dp"
            android:text="支出"
            android:textColor="@color/gray"
            android:background="@drawable/btn1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收入"
            android:textSize="20sp"
            android:background="@android:color/white"
            android:textColor="@color/dark_blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white">
        <Spinner
            android:id="@+id/sp_source"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:entries="@array/ar_source"
            android:paddingHorizontal="32dp"
            android:textColor="@color/dark_blue"
            android:textSize="90sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:text="￥"
                android:paddingLeft="20dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="40dp"/>

            <EditText
                android:id="@+id/et_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:paddingLeft="30dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="40sp" />

        </LinearLayout>

    </LinearLayout>
    //选择消费类型
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@android:color/white">

        //第一排图标
        <LinearLayout
            android:paddingHorizontal="25dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <LinearLayout
                android:paddingHorizontal="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_in1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"

                    android:layout_marginTop="10dp"
                    android:background="@drawable/income1" />

                <TextView
                    android:id="@+id/tv_in1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="薪资"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_in2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/income2" />

                <TextView
                    android:id="@+id/tv_in2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="奖金"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_in3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"

                    android:layout_marginTop="10dp"
                    android:background="@drawable/income3" />

                <TextView
                    android:id="@+id/tv_in3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="借款"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_in4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/income4" />

                <TextView
                    android:id="@+id/tv_in4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="投资所得"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

        </LinearLayout>

        //第一排文字

        //第二排图标

        <LinearLayout
            android:paddingHorizontal="25dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_in5"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/income5" />

                <TextView
                    android:id="@+id/tv_in5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="投资回收"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_in6"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/income6" />

                <TextView
                    android:id="@+id/tv_in6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="意外所得"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_in7"
                    android:layout_width="45dp"
                    android:layout_height="45dp"

                    android:layout_marginTop="10dp"
                    android:background="@drawable/income7" />

                <TextView
                    android:id="@+id/tv_in7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="人情"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_in8"
                    android:layout_width="45dp"
                    android:layout_height="45dp"

                    android:layout_marginTop="10dp"
                    android:background="@drawable/income8" />

                <TextView
                    android:id="@+id/tv_in8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="其它"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

        </LinearLayout>
        //第二排文字

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/white">

        <Button
            android:id="@+id/btn_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="@color/dark_blue"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:hint="请输入备注信息"
            android:paddingLeft="50dp"
            android:paddingRight="40dp"
            android:gravity="center"
            android:textColor="@color/dark_blue"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="@android:color/white">

        <Button
            android:id="@+id/btn_again"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="@android:color/white"
            android:text="再记一笔"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>